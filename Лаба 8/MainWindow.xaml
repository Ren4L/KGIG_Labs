<Window x:Class="Лаба_8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Лаба_8"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Режим">
                <MenuItem Header="Диффуз" Name="Inv" Click="Inv_Click"/>
                <MenuItem Header="Зеркал" Name="NInv" Click="NInv_Click"/>
            </MenuItem>
        </Menu>
        <Canvas Grid.Row="1" x:Name="Can" Width="700" Height="700" Background="LightGray" />
        <Label Name="lab" Grid.Row="1" Content="0" Width="800" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</Window>
